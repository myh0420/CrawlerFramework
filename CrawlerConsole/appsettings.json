// appsettings.json
{
  "CrawlerConfig": {
    "Basic": {
      "MaxConcurrentTasks": 10,
      "MaxDepth": 3,
      "MaxPages": 1000,
      "RequestDelay": "00:00:00.5",
      "TimeoutSeconds": 30,
      "RespectRobotsTxt": true,
      "FollowRedirects": true
    },
    "Domains": {
      "AllowedDomains": [ "example.com", "test.com" ],
      "BlockedPatterns": [ "/admin", "/login", "/logout" ]
    },
    "Performance": {
      "MemoryLimitMB": 500,
      "MaxQueueSize": 10000,
      "EnableCompression": true
    },
    "AntiBot": {
      "EnableDetection": true,
      "RetryPolicy": {
        "MaxRetries": 3,
        "InitialDelay": "00:00:01",
        "BackoffMultiplier": 2.0,
        "MaxDelay": "00:05:00"
      }
    },
    "Proxy": {
      "Enabled": false,
      "ProxyUrls": [
        "192.168.1.100:8080",
        "192.168.1.101:8080:username:password"
      ],
      "RotationStrategy": "RoundRobin",
      "TestIntervalMinutes": 30
    },
    "Storage": {
      "Type": "FileSystem",
      "FileSystemPath": "crawler_data",
      "DatabaseConnection": "Data Source=crawler.db"
    },
    "Monitoring": {
      "EnableMetrics": true,
      "EnableTracing": false,
      "MetricsIntervalSeconds": 30
    },
    "DataProcessing": {
      "RemoveDuplicateContent": true,
      "RemoveScriptsAndStyles": true,
      "NormalizeText": true,
      "MinContentLength": 100
    },
    "Seeds": {
      "SeedUrls": [
        "https://example.com",
        "https://example.com/news",
        "https://example.com/blog"
      ]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}